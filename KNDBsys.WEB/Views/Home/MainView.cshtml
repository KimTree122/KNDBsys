            //            addTab(node.text, url, node.iconCls);
            //        }
            //    }
            //});

                $("#maintree").tree({
                    data: str
                });

            $("#maintree").tree({
                onSelect: function (node) {
                    $("#maintree").tree(node.state === 'closed' ? 'expand' : 'collapse', node.target);
                    node.state = node.state === 'closed' ? 'open' : 'closed';
                    var url = node.attributes.url;
                    if (url.length > 0) {
                        addTab(node.text, url, node.iconCls);
                    }
                }
            });

            addMoudle();
        });

        function addMoudle() {

            var sdiv = ' <div style=" padding:10px;">';
            var ediv = '</div >'
            var lbtn = sdiv + "<a href='#' class='easyui-linkbutton' data-options=\"iconCls:'icon-large-picture', size:'large', iconAlign:'top'\">系统模块</a>" + ediv;
            $(lbtn).appendTo('#moudle');
            $.parser.parse('#moudle_menu');

            var lbtn2 = sdiv + "<a href='#' class='easyui-linkbutton' data-options=\"iconCls:'icon-large-clipart', size:'large', iconAlign:'top'\">模块二</a>" + ediv;
            $(lbtn2).appendTo('#moudle');
            $.parser.parse('#moudle_menu');



