@{
    ViewBag.Title = "Registers";
    Layout = "~/Views/Shared/_LayUI.cshtml";
}


<div style="position:absolute; top:15%;">
    <div class="layui-container">
        <div style="text-align:center;">
            <div class="layui-inline">
                <form class="layui-form" action="" >
                    <div class="form-group">
                        <label for="account">登陆账号</label>
                        <input type="text" class="form-control" id="account" aria-describedby="accountHelp">
                        <small id="emailHelp" class="form-text text-muted">填入系统中登陆的账号</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox"  class="form-check-input" title="记住密码">
                       
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

